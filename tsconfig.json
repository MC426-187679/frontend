{
    "compilerOptions": {
        // codegen and lib checking
        "target": "esnext",
        "lib": [
            "dom",
            "dom.iterable",
            "ESNext.Promise",
            "esnext"
        ],
        "noEmit": true,
        "skipLibCheck": true,
        "baseUrl": "./src",
        // modules
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": false,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx",
        // strictness
        "allowJs": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "exactOptionalPropertyTypes": false,
        "alwaysStrict": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        // left to the linter
        "noUnusedLocals": false,
        "noUnusedParameters": false,
    },
    "include": [
        "src"
    ]
}
